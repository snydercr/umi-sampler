{
  "version": 6,
  "cmakeMinimumRequired": { "major": 3, "minor": 22 },
  "configurePresets": [
    {
      "name": "pi-debug",
      "displayName": "Raspberry Pi Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "pi-release",
      "displayName": "Raspberry Pi Release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ],
  "buildPresets": [
    { "name": "pi-debug",   "configurePreset": "pi-debug",   "jobs": 0 },
    { "name": "pi-release", "configurePreset": "pi-release", "jobs": 0 }
  ]
}
